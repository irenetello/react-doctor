{
  "name": "react-doctor-lab",
  "displayName": "React Doctor Lab",
  "description": "Scan React/TS projects for architectural and maintainability issues",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onView:reactDoctorIssues",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onCommand:reactDoctor.scan",
    "onCommand:reactDoctor.exportReport",
    "onCommand:reactDoctor.fixImgAlt",
    "onCommand:reactDoctor.fixKeyIndex",
    "onCommand:react-doctor-lab.helloWorld",
    "onCommand:reactDoctor.fixAllSafe",
    "onCommand:reactDoctor.resetBaseline"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
          {
            "command": "react-doctor-lab.helloWorld",
            "title": "Hello World"
          },
          {
            "command": "reactDoctor.scan",
            "title": "React Doctor: Scan workspace"
          },
          {
            "command": "reactDoctor.exportReport",
            "title": "React Doctor: Export report (Markdown)"
          },
          {
            "command": "reactDoctor.fixImgAlt",
            "title": "React Doctor: Fix img alt"
          },
          {
            "command": "reactDoctor.toggleInfo",
            "title": "React Doctor: Toggle INFO"
          },
          {
            "command": "reactDoctor.fixKeyIndex",
            "title": "React Doctor: Replace key={index} with key={item.id}"
          },
          {
            "command": "reactDoctor.fixAllSafe",
            "title": "React Doctor: Fix All Safe Issues"
          },
          {
            "command": "reactDoctor.resetBaseline",
            "title": "React Doctor: Reset Baseline"
          }
        ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reactDoctor",
          "title": "React Doctor",
          "icon": "media/doctor.svg"
        }
      ]
    },
    "views": {
      "reactDoctor": [
        {
          "id": "reactDoctorIssues",
          "name": "Issues"
        }
      ]
    },
    "configuration": {
      "title": "React Doctor",
      "properties": {
        "reactDoctor.maxFileLines": {
          "type": "number",
          "default": 300,
          "description": "Warn when a file exceeds this number of lines."
        }
      }
    },
    "menus": {
      "view/item/context": [
        {
          "command": "reactDoctor.fixImgAlt",
          "when": "view == reactDoctorIssues && viewItem == img-alt",
          "group": "inline"
        }
      ],
       "view/title": [
        {
          "command": "reactDoctor.scan",
          "when": "view == reactDoctorIssues",
          "group": "navigation"
        },
        {
          "command": "reactDoctor.fixAllSafe",
          "when": "view == reactDoctorIssues",
          "group": "navigation"
        },
        {
          "command": "reactDoctor.resetBaseline",
          "when": "view == reactDoctorIssues",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}